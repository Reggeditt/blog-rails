
<div>
  <ul role="list" class="divide-y divide-gray-100">
    <% @users.each do |user|%>
      <li class="flex justify-between gap-x-6 m-5 py-5">
        <div class="flex min-w-0 gap-x-4">
          <%= image_tag "#{user.photo}", class: "h-12 w-12 flex-none rounded-full bg-gray-50" %>
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900">
              <%= link_to "#{user.name}", user_path(user.id) %>
            </p>
          </div>
        </div>
        <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
          <p class="mt-1 text-xs leading-5 text-gray-500"><span>Number of posts: <%= user.posts_counter || 0 %></span></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
