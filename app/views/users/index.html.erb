<h1>users show</h1>

<div>
  <h1>Here are the list of users</h1>
  <ul>
    <% @users.each_with_index do |user|%>
      <li>
        <%= image_tag "#{user.photo}" %>
        <div>
            <%=  %>
            <%= link_to "#{user.name}", user_path(user.id) %>
            <span>Number of posts: <%= user.posts_counter || 0 %></span>
       </div>
      </li> 
    <%end%>
  </ul>
</div>
