<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "enter email", autofocus: true, autocomplete: "email", style: "width: 100%; margin-block: 10px;" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "enter password", autocomplete: "current-password", style: "width: 100%; margin-block: 10px;" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", style: "border: 1px solid black; padding-inline: 50px; width: 100%;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
