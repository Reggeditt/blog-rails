<h1>posts index</h1>
<header>
  <%= image_tag "#{@user.photo}" %>
  <div>
    <%= link_to "#{@user.name}", user_path(@user.id) %>
    <span>Number of posts: <%= @user.posts_counter || 0 %></span>
  </div>
</header> 
<main>
    <ul>
      <% @user_posts.each_with_index do |currentPost, index|%>
        <li>
          <div>
            <%= link_to "Post ##{index + 1 }", user_post_path(@user.id, currentPost.id) %> 
            <%= currentPost.title%>
            <%= currentPost.text%>
          </div>
          <div>
            <ul>
                <% Comment.all.where(post_id: currentPost.id).each do |comment|%>
                  <li>
                    <%= user = User.find_by(id: comment.author_id).name%>:
                    <%= comment.text%>
                  </li>
                <% end%>
            </ul>
          </div>
        </li>
        <% end%>
    </ul>
</main>
            