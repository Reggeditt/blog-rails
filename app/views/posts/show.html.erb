<div style="border: 2px solid black; padding-inline: 20px">
  <h2><%= @post.title %> by <%= @user.name%></h2>
  <small>
        likes: <%= @post.likescounter || 0%>
        comments: <%= @post.commentscounter || 0%>
  </small>    
  <div style="margin-block: 5px;">
    <%= @post.text%>
    <p style="border: 1px solid red" ><%= button_to "like this post", user_post_likes_path(post_id: @post.id)%></p>
  </div>
</div>    
<div style="border: 1px solid black; padding-inline: 20px">
  comments
  <%= render partial: 'comments/comment_form', locals: {user:@user, post: @post, comment:@post_comment} %>
  <ul>
      <% @post_comments.each do |comment|%>
        <li>
          <%= user = User.find_by(id: comment.author_id).name%>:
          <%= comment.text%>
        </li>
      <% end%>
  </ul>
</div>
