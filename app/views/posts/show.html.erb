<div style="border: 1px solid black">
    <h2><%= @post.title %> by <%= @user.name%></h2>
    likes: <%= @post.likescounter || 0%>
    comments: <%= @post.commentscounter || 0%>    
</div>
<div style="margin-block: 5px; border: 1px solid black">
  <%= @post.text%>
</div>
    
<div style="border: 1px solid black">
  comments
  <ul>
      <% @post_comments.each do |comment|%>
        <li>
          <%= user = User.find_by(id: comment.author_id).name%>:
          <%= comment.text%>
        </li>
      <% end%>
  </ul>
</div>
